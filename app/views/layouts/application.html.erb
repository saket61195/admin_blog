<!DOCTYPE html>
<html>
<head>
  <title>RailsBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<%if flash[:notice]%>
    <div><%= flash[:notice]%></div>
    <% end %>

    <%if flash[:alert]%>
    <div><%= flash[:alert]%></div>
    <% end %>

    <p>
      <%= link_to Setting.first.site_name , posts_path %>
      <%= link_to 'Post', posts_path %>
    </p>
<%= yield %>

</body>
</html>
